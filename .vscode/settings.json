{
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions.hand": "goto",
  "editor.gotoLocation.multipleReferences.hand": "goto",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.useAliasesForRenames": false,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlineSuggest.enabled": true,
  
  // Angular Language Service settings for template navigation
  "angular.enable-strict-mode-prompt": false,
  "angular.experimental-ivy": true,
  "angular.auto-rename-tag": true,
  "angular.suggest.includeCompletionsWithSnippetText": true,
  "angular.suggest.includeAutomaticOptionalChainCompletions": true,
  "angular.trace.server": "off",
  "angular.log": "off",
  
  // HTML settings for Angular templates
  "html.suggest.angular1": false,
  "html.suggest.ionic": false,
  "html.customData": [],
  "html.validate.scripts": false,
  "html.validate.styles": false,
  
  // TypeScript settings for better template support
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.quoteStyle": "single",
  
  // File associations for Angular templates
  "files.associations": {
    "*.html": "html"
  },
  
  // Language server settings
  "angular-language-service.enable": true,
  "angular-language-service.trace.server": "off"
}
